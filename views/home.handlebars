<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Create a ticket</h3>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <input type="hidden" name="action" id="action" value="create-ticket">
            <div class="form-group">
                <label for="dept" class="col-sm-2 control-label">Category</label>
                <div class="col-sm-3">
                    <input type="text" id="categories" value="">
                    <!-- <select id="categories" class="form-control" multiple="multiple">
                        <option>IT Support</option>
                        <option>Deposition</option>
                    </select> -->
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-3">
                    <input type="email" class="form-control" name="email" id="email" value="">
                </div>
            </div>
            <div class="form-group">
                <label for="subj" class="col-sm-2 control-label">Subject</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="subj" id="subj" value="">
                </div>
            </div>
            <div class="form-group">
                <label for="subj" class="col-sm-2 control-label">Issue</label>
                <div class="col-sm-5">
                    <textarea style="height: 100px;" class="form-control" name="issue" id="issue"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" class="btn btn-primary create-ticket">Create Ticket</button>
                </div>
            </div>
            <div class="home-create-ticket-message"></div>
        </form>
    </div>
</div>